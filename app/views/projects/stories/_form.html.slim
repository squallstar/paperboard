= form_for(@story) do |f|
  - if @story.errors.any?
    #error_explanation
      h2
        = pluralize(@story.errors.count, "error")
        | &nbsp;prohibited this story from being saved:
      ul
        - @story.errors.full_messages.each do |msg|
          li= msg

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label :body
    = f.text_area :body

  .actions
    = f.submit